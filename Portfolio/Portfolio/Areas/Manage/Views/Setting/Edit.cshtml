
@{
    ViewData["Title"] = "Edit";
}
@model Setting

<h2>Edit Setting</h2>
<form method="post" asp-action="edit" class="col-6" enctype="multipart/form-data">
    @{ if (Model.Type == ObjectType.Image)
        {
            <div class="mb-3">
                <input type="hidden" name="Source" value="@Model.Source" />
                <img src="~/@Model.Source" alt="Portfolio Image" style=" width: 300px; margin-bottom: 1rem; display: block;" />
                <label for="formFile" asp-for="FormImage" class="form-label">@Model.Key</label>
                <input class="form-control" asp-for="FormImage" type="file">
                <span class="text-danger" asp-validation-for="FormImage"></span>
            </div>
        }
        else
        {
            <div class="input-group mb-3">
                <label asp-for="Source" class="input-group-text" id="inputGroup-sizing-default">@Model.Key</label>
                <input asp-for="Source" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                <span class="text-danger" asp-validation-for="Source"></span>
            </div>
        }
    }
    <button type="submit" class="btn btn-primary">Save</button>
</form>

