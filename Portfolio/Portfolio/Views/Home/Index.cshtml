@inject ViewService service
@{
    List <Setting> settingsList = service.GetSettings();
    ViewData["Title"] = "Home Page";
}
@model HomeVM
<!DOCTYPE html>
<html lang="en" style="overflow-x: hidden;">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portfolio</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!---------------->
    <!--Header start-->
    <!---------------->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light nav-con-main">
            <div class="container-fluid container">
                <a class="navbar-brand" href="#Hero">START BOOTSTRAP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-text">MENU</span><span class="navbar-toggler-icon"><i class="fas fa-bars"></i></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#PortfolioCards">PORTFOLIO</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#About">ABOUT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="#ContactMe">CONTACT</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!---------------->
    <!---Header end--->
    <!---------------->
    <body>
        <!---------------->
        <!---Hero Start--->
        <!---------------->
        <section id=MainHero>
            <div class=container>
                <div class="row hero-con-main">
                    <img src="~/@settingsList.FirstOrDefault(x => x.Key == "Hero-Image").Source" alt="avatar image">
                    <h1>@settingsList.FirstOrDefault(x => x.Key == "Hero-Header").Source</h1>
                    <p>@settingsList.FirstOrDefault(x => x.Key == "Hero-Title").Source</p>
                </div>
            </div>
        </section>
        <!---------------->
        <!----Hero end---->
        <!---------------->
        <!------------------------>
        <!--Portfolio Card start-->
        <!------------------------>
        <section id="PortfolioCards">
            <div class="container">
                <h1>PORTFOLIO</h1>
                <div class="row">
                    @{foreach (PortfolioCard item in Model.portfolioCards)
                        {
                            <div class="col-md-6 col-lg-4 mb-5">
                                <div class="card-body">
                                    <div class="card-content">
                                        <img src="~/@item.Image" alt="cabin">
                                        <div class="hover-content"><i class="fas fa-plus" data-id="@item.Id"></i></div>
                                    </div>
                                </div>
                            </div>
                        }}
                </div>
            </div>
        </section>
        <!------------------------>
        <!---Portfolio Card end--->
        <!------------------------>
        <!------------------->
        <!----About start---->
        <!------------------->
        <section id="About">
            <div class="container">
                <div class="row">
                    <h1>ABOUT</h1>
                    <div class="About-info">
                        <div class="row">
                            <div class="col-lg-4 ms-auto">
                                <p class="about-text">@settingsList.FirstOrDefault(x => x.Key == "About-Text-Left").Source</p>
                            </div>
                            <div class="col-lg-4 me-auto">
                                <p class="about-text">@settingsList.FirstOrDefault(x => x.Key == "About-Text-Right").Source</p>
                            </div>
                        </div>
                    </div>
                    <div class="about-btn">
                        <a href="@settingsList.FirstOrDefault(x => x.Key == "About-Link-Button").Source"><i class="fas fa-download"></i>@settingsList.FirstOrDefault(x => x.Key == "About-Text-Button").Source</a>
                    </div>
                </div>
            </div>
        </section>
        <!------------------->
        <!-----About end----->
        <!------------------->
        <!-------------------->
        <!--Contact Me start-->
        <!-------------------->
        <section id="ContactMe">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-xl-7">
                        <h1>CONTACT ME</h1>
                        <form id="contactForm" class="needs-validation" novalidate>
                            <!-- Name input-->
                            <div class="form-floating mb-3">
                                <input class="form-control" id="name" type="text" required />
                                <label for="name">Full name</label>
                                <div class="invalid-feedback">A name is required.</div>
                            </div>
                            <!-- Email address input-->
                            <div class="form-floating mb-3">
                                <input class="form-control" id="email" type="email" required />
                                <label for="email">Email address</label>
                                <div class="invalid-feedback" >An email is required.</div>
                                <div class="invalid-feedback" >Email is not valid.</div>
                            </div>
                            <!-- Phone number input-->
                            <div class="form-floating mb-3">
                                <input class="form-control" id="phone" type="tel" required />
                                <label for="phone">Phone number</label>
                                <div class="invalid-feedback" >A phone number is required.</div>
                            </div>
                            <!-- Message input-->
                            <div class="form-floating mb-3">
                                <textarea class="form-control" id="message" type="text" style="height: 10rem" required ></textarea>
                                <label for="message">Message</label>
                                <div class="invalid-feedback" >A message is required.</div>
                            </div>
                            <button class="btn btn-primary btn-xl" id="submitButton" type="submit">Send</button>
                        </form>

                    </div>
                </div>
            </div>
        </section>
        <!-------------------->
        <!---Contact Me end--->
        <!-------------------->
    </body>
    <!---------------->
    <!----Body end---->
    <!---------------->
    <!---------------->
    <!--Footer start-->
    <!---------------->
    <footer>
        <!---Footer info--->
        <section id="FooterInfo">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 mb-5">
                        <div class="location-info">
                            <h1 class="footer-header">LOCATION</h1>
                            <p class="footer-text">
                                @settingsList.FirstOrDefault(x => x.Key == "Footer-Text-Location").Source
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-4 mb-5">
                        <div class="social-media">
                            <h1 class="footer-header">AROUND THE WEB</h1>
                            <div class="row social-cards">
                                <div class="col-1">
                                    <a href="" ><i class="fab fa-facebook-f"></i></a>
                                </div>
                                <div class="col-1">
                                    <a href="" ><i class="fab fa-twitter"></i></a>
                                </div>
                                <div class="col-1">
                                    <a href="" ><i class="fab fa-linkedin-in"></i></a>
                                </div>
                                <div class="col-1">
                                    <a href=""><i class="fas fa-basketball-ball"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="freelance-info">
                            <h1 class="footer-header">ABOUT FREELANCER</h1>
                            <p class="footer-text">@settingsList.FirstOrDefault(x => x.Key == "Footer-Text-About").Source</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!---Footer copyright--->
        <section id="FooterCopyright">
            <div class="container">
                <div class="row">
                    <p>@settingsList.FirstOrDefault(x => x.Key == "Copyright-Text").Source</p>
                </div>
            </div>
        </section>
    </footer>
    <!---------------->
    <!---Footer end--->
    <!---------------->
    <div class="portfolio-modal modal fade" id="detailModal" tabindex="-1" aria-labelledby="portfolioModal" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">

            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/script.js"></script>
</body>
</html>