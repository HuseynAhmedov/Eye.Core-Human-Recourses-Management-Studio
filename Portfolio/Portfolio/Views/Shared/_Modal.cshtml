@model PortfolioCard

<div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button></div>
<div class="modal-body text-center pb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <!-- Portfolio Modal - Title-->
                <h2 class="portfolio-modal-title text-secondary text-uppercase mb-1">@Model.Header</h2>
                <!-- Portfolio Modal - Image-->
                <img class="img-fluid rounded mb-5" src="~/@Model.Image" alt="Portfolio Image" />
                <!-- Portfolio Modal - Text-->
                <p class="mb-4">@Model.Article</p>
                <button class="btn btn-primary" href="#detailModal" data-bs-dismiss="modal">
                    <i class="fas fa-times fa-fw"></i>
                    Close Window
                </button>
            </div>
        </div>
    </div>
</div>