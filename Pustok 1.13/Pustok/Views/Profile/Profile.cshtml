@inject ViewService viewService
@{
    List<Order> orders = viewService.GetOrders();
    ViewData["Title"] = "Portfile";
    int orderCount = 0;
}

@model ProfileVM
<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">My Account</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<div class="page-section inner-page-sec-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <!-- My Account Tab Menu Start -->
                    <div class="col-lg-3 col-12">
                        <div class="myaccount-tab-menu nav" role="tablist">
                            <a href="#dashboad" class="active" data-toggle="tab">
                                <i class="fas fa-tachometer-alt"></i>
                                Dashboard
                            </a>
                            <a href="#orders" data-toggle="tab"><i class="fa fa-cart-arrow-down"></i> Orders</a>
                            <a href="#payment-method" data-toggle="tab">
                                <i class="fa fa-credit-card"></i>
                                Payment
                                Method
                            </a>
                            <a href="#address-edit" data-toggle="tab">
                                <i class="fa fa-map-marker"></i>
                                address
                            </a>
                            <a href="#account-info" data-toggle="tab">
                                <i class="fa fa-user"></i> Account
                                Details
                            </a>
                            <a asp-action="logout" asp-controller="account"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        </div>
                    </div>
                    <!-- My Account Tab Menu End -->
                    <!-- My Account Tab Content Start -->
                    <div class="col-lg-9 col-12 mt--30 mt-lg--0">
                        <div class="tab-content" id="myaccountContent">
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade show active" id="dashboad" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Dashboard</h3>
                                    <div class="welcome mb-20">
                                        <p>
                                            Hello, <strong>@Model.FullName</strong>
                                        </p>
                                    </div>
                                    <p class="mb-0">
                                        From your account dashboard. you can easily check &amp; view
                                        your
                                        recent orders, manage your shipping and billing addresses and edit your
                                        password and account details.
                                    </p>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="orders" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Orders</h3>
                                    <div class="panel-body">
                                        <table class="table table-condensed table-striped">
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th>Code</th>
                                                    <th>CreatedAt</th>
                                                    <th>Status</th>
                                                    <th>DeliveryStatus</th>
                                                    <th>Amount</th>
                                                </tr>
                                            </thead>

                                            <tbody>

                                                @foreach (Order order in orders.Where(x=> x.AppUser.UserName == User.Identity.Name ))
                                                {
                                                    orderCount++;
                                                    <tr data-toggle="collapse" data-target="#demo@(orderCount)" class="accordion-toggle">
                                                        <td>@orderCount</td>
                                                        <td>@(order.CodePrefix+order.CodeNumber)</td>
                                                        <td>@order.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                                        <td>@order.Status</td>
                                                        <td>@order.DeliveryStatus</td>
                                                        <td>@order.TotalAmount</td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="12" class="hiddenRow">
                                                            <div class="accordian-body collapse" id="demo@(orderCount)">
                                                                <table class="table table-striped">
                                                                    <thead>
                                                                        <tr class="info">
                                                                            <th>BookName</th>
                                                                            <th>Price</th>
                                                                            <th>DiscountPercent</th>
                                                                            <th>SoldPrice</th>
                                                                            <th>Count</th>
                                                                        </tr>
                                                                    </thead>

                                                                    <tbody>

                                                                        @foreach (var item in order.OrderItems)
                                                                        {
                                                                            <tr data-toggle="collapse" class="accordion-toggle" data-target="#demo10">
                                                                                <td> <a asp-action="detail" asp-controller="book" asp-route-id="@item.ProductId">@item.Product.Title</a></td>
                                                                                <td>@item.SalePrice</td>
                                                                                <td>@item.DiscountPercent </td>
                                                                                <td>@((item.DiscountPercent>0?(item.SalePrice* (1-item.DiscountPercent/100)):item.SalePrice).ToString("0.00"))</td>
                                                                                <td>@item.Count</td>
                                                                            </tr>
                                                                        }

                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }


                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="payment-method" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Payment Method</h3>
                                    <p class="saved-message">You Can't Saved Your Payment Method yet.</p>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="address-edit" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Billing Address</h3>
                                    <address>
                                        <p><strong>Alex Tuntuni</strong></p>
                                        <p>
                                            1355 Market St, Suite 900 <br>
                                            San Francisco, CA 94103
                                        </p>
                                        <p>Mobile: (123) 456-7890</p>
                                    </address>
                                    <a href="#" class="btn btn--primary">
                                        <i class="fa fa-edit"></i>Edit
                                        Address
                                    </a>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="account-info" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Account Details</h3>
                                    <div class="account-details-form">
                                        <form method="post" asp-action="profile">
                                            <div class="row">
                                                <div class="col-12  mb--30">
                                                    <label asp-for="FullName">Fullname</label>
                                                    <input id="display-name" asp-for="FullName" type="text">
                                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                                </div>
                                                <div class="col-12  mb--30">
                                                    <label asp-for="UserName">Username</label>
                                                    <input id="display-name" asp-for="UserName" type="text">
                                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                                </div>
                                                <div class="col-12  mb--30">
                                                    <label asp-for="Email">Email</label>
                                                    <input id="email" asp-for="Email" type="email">
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                                <div class="col-12  mb--30">
                                                    <h4>Password change</h4>
                                                </div>
                                                <div class="col-12  mb--30">
                                                    <label asp-for="CurrentPassword">Current password</label>
                                                    <input id="current-pwd" asp-for="CurrentPassword" type="password">
                                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                                </div>
                                                <div class="col-lg-6 col-12  mb--30">
                                                    <label asp-for="NewPassword">New password</label>
                                                    <input id="new-pwd" asp-for="NewPassword" type="password">
                                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                                </div>
                                                <div class="col-lg-6 col-12  mb--30">
                                                    <label asp-for="NewPasswordRepeat">Password repeat</label>
                                                    <input id="confirm-pwd" asp-for="NewPasswordRepeat" type="password">
                                                    <span asp-validation-for="NewPasswordRepeat" class="text-danger"></span>
                                                </div>
                                                <div class="text-danger mx-auto mb-1" asp-validation-summary="ModelOnly"></div>
                                                <div class="col-12">
                                                    <button type="submit" class="btn btn--primary">Save Changes</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                        </div>
                    </div>
                    <!-- My Account Tab Content End -->
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


