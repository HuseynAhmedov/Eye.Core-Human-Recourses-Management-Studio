@model Comment

<div class="rating-row pt-2">
    <p class="d-block">Your Rating</p>
    <span class="rating-widget-block">
        <input type="radio" name="StarCount" form="add-comment" value="5" id="star1">
        <label for="star1"></label>
        <input type="radio" name="StarCount" form="add-comment" value="4" id="star2">
        <label for="star2"></label>
        <input type="radio" name="StarCount" form="add-comment" value="3" id="star3">
        <label for="star3"></label>
        <input type="radio" name="StarCount" form="add-comment" value="2" id="star4">
        <label for="star4"></label>
        <input type="radio" name="StarCount" form="add-comment" value="1" id="star5">
        <label for="star5"></label>
    </span>
    <form asp-action="comment" id="add-comment" method="post" class="mt--15 site-form ">
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label for="message">Comment</label>
                    <textarea asp-for="CommentText" cols="30" rows="10" class="form-control"></textarea>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="submit-btn">
                    @{ if (User.Identity.IsAuthenticated == true)
                       {
                            <button type="submit" class="btn btn-black">Post Comment</button>
                       }
                       else
                       {
                            <a class="btn btn-black" asp-action="login" asp-controller="account">Post Comment</a>
                       }
                    }
                </div>
            </div>
        </div>
    </form>
</div>
