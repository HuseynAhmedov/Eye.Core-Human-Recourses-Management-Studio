
@{
    ViewData["Title"] = "ResetPassword";
}

@model ResetPasswordVM

<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0 mx-auto">
                <!-- Login Form s-->
                <form asp-action="ChangePassword" method="post">
                    <div class="login-form">
                        <h4 class="login-title">Reset Password</h4>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="Password">Password</label>
                                <input class="mb-0 form-control" asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <input class="mb-0 form-control" asp-for="ConfirmPassword">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <input name="token" type="hidden" value="@Model.Token" />
                            <input name="email" type="hidden" value="@Model.Email" />
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-outlined">Apply</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @section Scripts{
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</main>


