                                    if (pageNation.PageSelected + 1 <= pageNation.PageCount) { pageAfter = pageNation.PageSelected + 1; }
                                    if (pageNation.PageSelected == pageBefore) { pageBefore = pageAfter + 1; previousDisable = "hidden"; }
                                    if (pageNation.PageSelected == pageAfter) { pageAfter = pageBefore - 1; nextDisable = "hidden"; }
                                }


                                <li style="visibility:@previousDisable">
                                    <a asp-action="index" asp-route-page="1" class="single-btn prev-btn ">
                                        |<i class="zmdi zmdi-chevron-left"></i>
                                    </a>
                                </li>
                                <li style="visibility:@previousDisable">
                                    <a asp-action="index" asp-route-page="@pageBefore" class="single-btn prev-btn ">
                                        <i class="zmdi zmdi-chevron-left"></i>
                                    </a>
                                </li>

                                @for (int i = 1; i <= pageNation.PageCount; i++)
                                {
                                    if (i == pageNation.PageSelected || i == pageAfter || i == pageBefore)
                                    {

                                        <li class=" @(i==pageNation.PageSelected?"active":"")"><a asp-action="index" asp-route-page="@i" class="single-btn">@i</a></li>
                                    }
                                }
                                <li style="visibility:@nextDisable">
                                    <a asp-action="index" asp-route-page="@pageAfter" class="single-btn next-btn">
                                        <i class="zmdi zmdi-chevron-right"></i>
                                    </a>
                                </li>
                                <li style="visibility:@nextDisable">
                                    <a asp-action="index" asp-route-page="@pageNation.PageCount" class="single-btn next-btn @nextDisable">
                                        <i class="zmdi zmdi-chevron-right"></i>|
                                    </a>
                                </li>
                            </ul>
                        </div>
