@model List<Product>

<div class="product-slider multiple-row  slider-border-multiple-row  sb-slick-slider"
     data-slick-setting='{
                                        "autoplay": true,
                                        "autoplaySpeed": 8000,
                                        "slidesToShow": 5,
                                        "rows":1,
                                        "dots":true
                                    }' data-slick-responsive='[
                                        {"breakpoint":1200, "settings": {"slidesToShow": 3} },
                                        {"breakpoint":768, "settings": {"slidesToShow": 2} },
                                        {"breakpoint":480, "settings": {"slidesToShow": 1} },
                                        {"breakpoint":320, "settings": {"slidesToShow": 1} }
                                    ]'>

    @foreach (Product item in Model)
    {
        <div class="single-slide">
            <div class="product-card">
                <div class="product-header">
                    <a href="#" class="author">
                        @item.Author
                    </a>
                    <h3>
                        <a asp-controller="product" asp-action="index" asp-route-id ="@item.Id">
                            @item.Title
                        </a>
                    </h3>
                </div>
                <div class="product-card--body">
                    <div class="card-image">
                        <img src="~/@item.ProductImages.FirstOrDefault(x=>x.MainImage == true).Source" alt="">
                        <div class="hover-contents">
                            <a href="product-details.html" class="hover-image">
                                <img src="~/@item.ProductImages.FirstOrDefault(x=>x.HoverImage == true).Source" alt="">
                            </a>
                            <div class="hover-btns">
                                <a href="#" class="single-btn add-to-cart-btn" data-id="@item.Id">
                                    <i class="fas fa-shopping-basket"></i>
                                </a>
                                <a href="#" class="single-btn">
                                    <i class="fas fa-heart"></i>
                                </a>
                                <a href="#" class="single-btn">
                                    <i class="fas fa-random"></i>
                                </a>
                                <a href="#" data-toggle="modal" data-id="@item.Id"
                                   class="single-btn single-eye-btn">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="price-block">
                        <span class="price">£@item.Price</span>
                        @if (item.PriceDiscount > 0)
                        {
                            <del class="price-old">£@item.PriceOld</del>
                            <span class="price-discount">@item.PriceDiscount%</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>