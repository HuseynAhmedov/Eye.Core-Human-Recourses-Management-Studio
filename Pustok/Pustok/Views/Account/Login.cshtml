
@{
    ViewData["Title"] = "Login";
}
@model LoginVM

<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0 mx-auto">
                <!-- Login Form s-->
                <form asp-action="login" method="post">
                    <div class="login-form">
                        <h4 class="login-title">Welcome back</h4>
                        <div class="row">

                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="UserName">UserName</label>
                                <input class="mb-0 form-control" asp-for="UserName"
                                       placeholder="Enter your username">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="Password">Password</label>
                                <input class="mb-0 form-control" asp-for="Password" placeholder="Enter your password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="text-danger mx-auto mb-1" asp-validation-summary="ModelOnly"></div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-outlined">Sign in</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @section Scripts{
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</main>


