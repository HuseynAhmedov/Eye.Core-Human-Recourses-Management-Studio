
@{
    ViewData["Title"] = "Index";
}

@model GenreVM

<a asp-area="manage" asp-controller="genre" asp-action="create"><button type="button" class="btn btn-primary" style="margin:15px">Create new Genre</button></a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Product Count</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Genre item in Model.Genres)
        {
            int rowNum = Model.Genres.IndexOf(item) + 1;
            <tr>
                <th scope="row">@rowNum</th>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Products.Count()</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a asp-controller="genre" asp-action="info" asp-route-id="@item.Id"><button type="button" class="btn btn-info" style="border-top-right-radius: 0%;border-bottom-right-radius: 0%;">Info</button></a>
                        <a asp-area="manage" asp-controller="genre" asp-action="edit" asp-route-id="@item.Id"><button type="button" class="btn btn-warning" style=" border-radius: 0px !important;">Edit</button></a>
                        <button type="button" class="btn btn-danger" onclick="DeleteAlert('genre',@item.Id)">Delete</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@{await Html.RenderPartialAsync("_PageNation", Model.pageNation);}

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.3.0/dist/sweetalert2.all.min.js"></script>
}

